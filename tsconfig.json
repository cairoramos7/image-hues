{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "lib": [
      "ES2017",
      "DOM"
    ] // Add ES2017 for Object.entries, DOM for browser APIs
  },
  "include": [
    "src/**/*"
  ]
}